# ~/.offlineimap/config

[general]
ui = quiet
accounts = example

[Account example]
localrepository = example-local
remoterepository = example-remote
autorefresh = 5
quick = 5
postsynchook = notify-mailbox-synced 'example'

[Repository example-local]
type = Maildir
localfolders = ~/mail/example

[Repository example-remote]
type = Gmail
remoteuser = <user>
remotepass = <pass>
maxconnections = 3
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
