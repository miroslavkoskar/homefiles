audio/*;                    mutt_bgrun mplayer %s;
video/*;                    mutt_bgrun mplayer %s;

application/ogg;            mutt_bgrun mplayer %s;
application/pdf;            mutt_bgrun evince %s;
application/msword;         mutt_bgrun libreoffice %s;
application/msexcel;        mutt_bgrun libreoffice %s;
application/mspowerpoint;   mutt_bgrun libreoffice %s;
application/vnd.ms-excel;   mutt_bgrun libreoffice %s;
application/*;              vim %s;
