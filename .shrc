# Executed by interactive shells based on ENV environment variable reference.

[ "$SHRC_DEBUG" ] && echo \~/.shrc >&2

. ~/bin/term.sh

# ----------------------------------------

case $- in *i*) ;; *) return ;; esac

. ~/bin/shx.sh
. ~/bin/shrc-pre.sh

HOSTNAME=$(uname -n)

PS1="\${BASEDIR:+(\${BASEDIR##*/}):}\${PWD##*/}$ "
if [ "$HOSTNAME" != mirci ]; then
    PS1=\$HOSTNAME:$PS1
fi

set -o vi

# ----------------------------------------

. ~/bin/shrc-post.sh

