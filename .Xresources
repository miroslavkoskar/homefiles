! See also: xrdb(1), appres(1)

#include ".xcolors/default"


! XTerm
! ----------------------------------------

XTerm.termName:                 xterm-256color
XTerm.ptyInitialErase:          false

!XTerm*VT100.boldColors:         false
XTerm*VT100.colorBD:            #dddddd
XTerm*VT100.colorBDMode:        true
XTerm*VT100.dynamicColors:      true
XTerm*VT100.veryBoldColors:     4

! Since xterm does not support font fallback (only single font)
! it is reasonable to choose a font with a large set of glyphs.
XTerm*VT100.faceName:           xft:DejaVu Sans Mono:size=10

XTerm*VT100.bellIsUrgent:       true
XTerm*VT100.bellOnReset:        false
XTerm*VT100.metaSendsEscape:    true
XTerm*VT100.printAttributes:    0
XTerm*VT100.printerCommand:     cat > $(mktemp -p ~/tmp xterm.XXXXXX)
XTerm*VT100.saveLines:          8192
XTerm*VT100.utf8:               2

XTerm*VT100.translations:       #override \n \
                                Ctrl ~Alt Shift <Key>H: string(\177) \n \
                                ~Shift <Key>Print: print() \n \
                                Shift <Key>Print: print-everything()

#undef TPREFIX
#define TPREFIX *VT100.
#include ".xcolors/resources"


! URxvt
! ----------------------------------------

URxvt.termName:         rxvt-unicode-256color

!URxvt.intensityStyles:  false
!URxvt.underlineColor:   #fdb436
URxvt.colorBD:          15
URxvt.colorIT:          #d4c668
URxvt.cursorColor2:     1
URxvt.scrollColor:      gray20

! Since urxvt supports font fallback (for missing glyphs)
! every font resource can in fact contain font list.
URxvt.font:             xft:local_terminal_sized, \
                        xft:Symbola, \
                        xft:Symbola:pixelsize=8

!URxvt.depth:            32
URxvt.cutchars:         '"()*,<>[]{}|\''
URxvt.iso14755:         true
URxvt.iso14755_52:      false
URxvt.pointerBlank:     true
URxvt.print-pipe:       cat > $(mktemp -p ~/tmp urxvt.XXXXXX)
URxvt.saveLines:        8192
URxvt.scrollBar:        false
URxvt.scrollstyle:      plain
URxvt.thickness:        5
URxvt.urgentOnBell:     true

! ASCII BS  == 8   == \010 == ^H
! ASCII DEL == 127 == \177 == ^?

! BackSpace = BS
! C-BackSpace = DEL
! C-h = BS
!URxvt.backspacekey:         \010
!URxvt.keysym.C-BackSpace:   \177

! BackSpace = DEL
! C-BackSpace = BS
! C-h = DEL
URxvt.keysym.C-h:       \177
URxvt.keysym.M-C-h:     builtin:
URxvt.keysym.S-C-h:     builtin:

URxvt.perl-ext-common:          default,-option-popup,-readline,-searchable-scrollback,confirm-paste,keyboard-select,url-select,url-picker
URxvt.url-picker.launcher:      b
URxvt.url-select.launcher:      b
URxvt.url-select.underline:     true
URxvt.keysym.M-C-bracketleft:   perl:keyboard-select:activate
URxvt.keysym.M-C-slash:         perl:keyboard-select:search
URxvt.keysym.M-C-u:             perl:url-select:select_next
URxvt.keysym.M-C-o:             perl:url-picker

#undef TPREFIX
#define TPREFIX URxvt.
#include ".xcolors/resources"


! Xcursor
! ----------------------------------------

Xcursor.size:           22
Xcursor.theme:          Grounation


! Xft
! ----------------------------------------

Xft.antialias:          1
Xft.autohint:           0
Xft.hinting:            1
Xft.hintstyle:          hintslight
Xft.lcdfilter:          lcddefault
Xft.rgba:               rgb
