[alias]
    b = branch --all -vv
    ci = commit
    clone-shallow = clone --depth 100
    co = checkout
    conf = config --local --list
    d = difftool
    dc = difftool --cached
    df = diff
    dfc = diff --cached
    f = fetch --all
    k = !gitk
    lg = !git lg1 -100
    lg1 = log --graph --format=lg1 --color
    lga = !git lg --all
    ls = ls-files
    ls-untracked = ls-files --others --directory
    remotes = remote -v
    set-email = !git-set-email
    set-upstream = remote add upstream
    st = status -sb --show-stash
    up = update
    update = !git-update

[color]
    pager = false
    ui = auto

[commit]
    template = ~/.config/git/commit.template

[core]
    ;autocrlf = input

[credential]
    helper = cache --timeout=3600
    helper = netrc

[difftool "custom"]
    cmd = difftool "$LOCAL" "$REMOTE"

[format]
    coverletter = auto
    thread = shallow

[grep]
    linenumber = true

[http]
    ;sslverify = false

[log]
    decorate = short

[mailinfo]
    scissors = true

[merge]
    conflictstyle = diff3
    tool = custom

[mergetool "custom"]
    cmd = mergetool "$BASE" "$LOCAL" "$REMOTE" "$MERGED"

[pager]
    branch = false

[pretty]
    lg1 = %C(bold blue)%h%Creset %C(bold white)%an%Creset %C(bold green)(%ar)%Creset%C(bold yellow)%d%Creset%n %s

[push]
    default = nothing

