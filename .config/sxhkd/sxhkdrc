super + B
    backlight-toggle

super + F12
    measure | clip -i

super + Print
    sshot

super + p
    dmenu_run

super + semicolon ; T
    touchpad toggle

super + semicolon ; a
    b http://apod.nasa.gov/

super + semicolon ; b
    bluetooth-toggle

super + semicolon ; d
    dpms-toggle

super + semicolon ; i
    notify -u low "$(status)"

super + semicolon ; l
    sudo lock

super + semicolon ; r
    notify -u low "$(urlres)"

super + semicolon ; s
    selfie

super + semicolon ; t
    trackpoint-wheel toggle

super + semicolon ; w
    wifi-toggle

super + semicolon ; {m,M}
    {markx-url,markx}

super + semicolon ; {p,P}
    playx{_,-menu}

super + semicolon ; {u,U}
    unicode -x select{ fav,_}

super + shift + Home
    term trun wow

super + shift + Return
    term

super + {F1,F2,F3}
    xkb {0,1,2}

super + {F9,F10,shift + F10}
    xscreen{_, -, mobile}

super + {_,shift + }Insert
    clip{_, -p && notify 'PRIMARY -> CLIPBOARD'}

super + {_,shift + }apostrophe
    bb{_, dd}

