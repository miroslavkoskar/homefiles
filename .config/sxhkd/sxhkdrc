super + colon
    wmutil spawn sp:adm term -n \{\} -g 180x48 trun mux adm

super + semicolon ; super + semicolon
    wmutil spawn sp:mon term -n \{\} -g 180x48 trun mux mon

super + alt + {J,L,K,H}
    xdo resize {-h ,-w }{+,-}50

super + alt + {j,l,k,h}
    xdo move {-y ,-x }{+,-}50

super + {_,ctrl + ,shift + }y
    xdotool click --clearmodifiers {1,2,3}

super + {i,o,u}
    wmutil warp_to_primary{_, 1r, 1l}

super + alt + ctrl + {k,j,i,u,o,comma,m,period,l}
    wmutil warp_in_window {c,e,n,ne,nw,s,se,sw,w}

super + {c,C}
    xdo {close,kill}

