super + alt + {H,K,L,J}
    xdo resize {-w ,-h }{-,+}50

super + alt + {h,k,l,j}
    xdo move {-x ,-y }{-,+}50

super + {_,ctrl + ,shift + }y
    xdotool click --clearmodifiers {1,2,3}

