[alias]
    b = branch --all -vv
    ci = commit
    co = checkout
    conf = config --local --list
    d = difftool
    dc = difftool --cached
    df = diff
    dfc = diff --cached
    f = fetch --all
    k = !gitk
    lg = !git lg1
    lg1 = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    lg2 = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(bold white)— %an%C(reset)' --abbrev-commit
    lga = !git lg --all
    ls = ls-files
    ls-untracked = ls-files --others
    set-email = !git-set-email
    set-upstream = remote add upstream
    st = status -s
    stu = status -su
    up = update
    update = !git-update

[color]
    pager = false
    ui = auto

[commit]
    gpgsign = true
    template = ~/.gitmessage

[core]
    ;autocrlf = input
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitexcludes

[credential]
    helper = cache --timeout=3600
    helper = netrc

[difftool "custom"]
    cmd = difftool "$LOCAL" "$REMOTE"

[format]
    coverletter = auto
    thread = shallow

[http]
    ;sslverify = false

[mailinfo]
    scissors = true

[merge]
    conflictstyle = diff3
    tool = custom

[mergetool "custom"]
    cmd = mergetool "$BASE" "$LOCAL" "$REMOTE" "$MERGED"

[push]
    default = nothing

[user]
    name = Miroslav Koskar
