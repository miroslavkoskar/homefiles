#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

if (( ! $# )); then
    echo "usage: $prgname path" >&2
    exit 2
fi

exec 2>/dev/null

path=$(realpath -- "$1")
basename=${path##*/}

echo "$path"

if manp=$(man -w "$path") && \
    [[ $manp != "$path" ]]; then
    man "$path" | sed -nr '/^NAME/{n; s/^\s*//p}'
else
    if manp=$(man -w "$basename") && \
        [[ $manp != "$basename" ]]; then
        man "$basename" | sed -nr '/^NAME/{n; s/^\s*//p}'
    fi
fi

while read -r pkg; do
    pkgmark "$pkg" | sed -nr '1s/^/pkg: /p'
done < <(pacman -Qoq "$path")
