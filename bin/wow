#!/usr/bin/env bash

set -eu -o pipefail

cd ~/projects/notes/src/09-policy

output() {
    local files count
    files=([0-9]*)
    count=${#files[@]}
    for i in "${!files[@]}"; do
        cat "${files[i]}"
        (( i != count-1 )) && echo
    done
}

output | PAGER_TITLE='Words Of Wisdom' pg -c 'set ft=rst fdm=marker'
