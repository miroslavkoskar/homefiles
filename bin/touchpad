#!/usr/bin/env bash

set -eu -o pipefail
shopt -s inherit_errexit

export LC_ALL=C
prgname=${0##*/}

name='pointer:SynPS/2 Synaptics TouchPad'
prop='Device Enabled'

state() {
    declare -i val=0
    # prop is hardcoded above and ERE safe, hence no need to escape it
    val=$(xinput list-props "$name" | awk -F : -v prop="$prop" \
        '$0 ~ "^\\s*" prop " \\([0-9]+\\):" { print $2 }')
    echo $((val > 0))
}

if (( ! $# )); then
    state
    exit
fi

if [[ $1 = toggle ]]; then
    state=$(state)
    case $state in 1) set -- 0 ;; *) set -- 1 ;; esac
fi

case $1 in
    1 | on | true)
        valset=1
        ;;
    0 | off | false)
        valset=0
        ;;
    *)
        echo "usage: $prgname [1 | on | true | 0 | off | false | toggle]" >&2
        exit 2
        ;;
esac

xinput set-prop "$name" "$prop" "$valset"
status-osd touchpad
