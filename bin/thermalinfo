#!/usr/bin/env bash

set -eu

get() {
    local sep=${3:-/}
    local in="$1$sep$2" out="_$2"
    declare -g "$out="
    [[ ! -e $in ]] || declare -g "$out=$(<"$in")"
}

echo $'\n--------------------------------------------------'
echo $'> sensors:\n'

sensors

echo '--------------------------------------------------'
base='/sys/class/thermal'
printf '> %s:\n\n' "$base"

for cdev in "$base/"cooling_device*; do
    [[ -e $cdev ]] || continue

    _cdev=${cdev##*/}

    get "$cdev" type
    get "$cdev" cur_state
    get "$cdev" max_state

    # shellcheck disable=SC2154
    printf '%-18s : %-20s %6s / %6s\n' "$_cdev" "$_type" "$_cur_state" "$_max_state"
done
echo

for tzone in "$base/"thermal_zone*; do
    [[ -e $tzone ]] || continue

    _tzone=${tzone##*/}

    get "$tzone" type
    get "$tzone" temp
    get "$tzone" mode
    get "$tzone" policy
    get "$tzone" passive

    # shellcheck disable=SC2154
    {
        printf '%-18s : %-20s %6s\n' "$_tzone" "$_type" "$_temp"
        [[ $_mode ]] && printf '  %-16s : %-28s\n' 'mode' "$_mode"
        printf '  %-16s : %-20s\n' 'policy' "$_policy"
        [[ $_passive ]] && printf '  %-16s : %-28s\n' 'passive' "$_passive"
    }

    for tpoint in "$tzone/"trip_point_*_type; do
        [[ -e $tpoint ]] || continue

        _base=${tpoint%%_type}
        _tpoint=${_base##*/}

        get "$_base" type _
        get "$_base" temp _

        # shellcheck disable=SC2154
        printf '  %-16s : %-20s %6s\n' "$_tpoint" "$_type" "$_temp"
    done
    echo
done
