#!/usr/bin/env bash

set -eu
shopt -s nullglob

prgname=${0##*/}

[[ ${XSESSION-} ]] && exit 1

printf '%s: %s\n' "$prgname" "$*" >&2

cleanup() {
    local retstat=$?
    local pids; pids=($(jobs -p))
    (( ${#pids[@]} )) && kill "${pids[@]}"
    printf '%s: exit %s\n' "$prgname" "$retstat" >&2
}
trap cleanup EXIT

for f in /etc/X11/xinit/xinitrc.d/* ; do
    [[ $f = '/etc/X11/xinit/xinitrc.d/50-systemd-user.sh' ]] && continue
    [[ -f $f ]] && . "$f"
done

xrdb -load ~/.Xresources

if [[ $(xserverq name) = 'Xephyr' ]]; then
    xrdb -merge - <<<'Xft.dpi: 96'
fi

xscreen

/usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &

if [[ $(xserverq name) = 'Xorg' ]]; then
    compton &
fi

_main() {
    osdd &
    _xmonad
}

_openbox() {
    tint2 &
    openbox
}

_xmonad() {
    tray &
    xmonad
}

session=$1
export XSESSION=$session
case $session in
    main | openbox | xmonad)
        "_$session"
        ;;
    *)
        (( $# )) && command "$@"
        ;;
esac
