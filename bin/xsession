#!/bin/bash

set -e

# startx unsets DBUS_SESSION_BUS_ADDRESS, let's get it back
. ~/.profile

if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for i in /etc/X11/xinit/xinitrc.d/* ; do
        [ -f "$i" ] && source "$i"
    done
fi

xresources=~/.Xresources
if [ -f "$xresources" ]; then
    xrdb -load "$xresources"
fi

xmodmap=~/.Xmodmap
if [ -f "$xmodmap" ]; then
    xmodmap "$xmodmap"
fi

xkb
xscreen

main() {
    osdd &
    twmnd &
    workrave &
    xmonad
}

xmonad() {
    tray &
    /usr/bin/xmonad
}

openbox() {
    tint2 &
    /usr/bin/openbox
}

[ $# -gt 0 ] && eval "$*"
