#!/usr/bin/env bash

set -eu
shopt -s nullglob

prgname=${0##*/}

printf '%s: %s\n' "$prgname" "$*" >&2

cleanup() {
    local retstat=$?
    local pids; pids=($(jobs -p))
    (( ${#pids[@]} )) && kill "${pids[@]}"
    printf '%s: exit %s\n' "$prgname" "$retstat" >&2
}
trap cleanup EXIT

for i in /etc/X11/xinit/xinitrc.d/* ; do
    [[ -f $i ]] && . "$i"
done

xrdb -load ~/.Xresources

xscreen
/usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &

if [[ $(xserverq name) = 'Xorg' ]]; then
    xrun compton &
fi

_main() {
    xrun osdd &
    xrun dunst &
    #xrun keynav &
    _xmonad
}

_herbstluftwm() {
    herbstluftwm --locked
}

_openbox() {
    xrun tint2 &
    openbox
}

_xmonad() {
    xrun tray &
    xmonad
}

session=$1
case $session in
    main | herbstluftwm | openbox | xmonad)
        export XSESSION=$session
        _$session
        ;;
    *)
        (( $# )) && command "$@"
        ;;
esac
