#!/usr/bin/env bash

set -eu
shopt -s nullglob

prgname=${0##*/}

[[ ${XSESSION-} ]] && exit 1

printf '%s: %s\n' "$prgname" "$*" >&2

cleanup() {
    local retstat=$?
    local pids; pids=($(jobs -p))
    (( ${#pids[@]} )) && kill "${pids[@]}"
    printf '%s: exit %s\n' "$prgname" "$retstat" >&2
}
trap cleanup EXIT

for i in /etc/X11/xinit/xinitrc.d/* ; do
    [[ $i = '/etc/X11/xinit/xinitrc.d/50-systemd-user.sh' ]] && continue
    [[ -f $i ]] && . "$i"
done

xrdb -load ~/.Xresources

if [[ $(xserverq name) = 'Xephyr' ]]; then
    xrdb -merge - <<<'Xft.dpi: 96'
fi

xscreen
/usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &

if [[ $(xserverq name) = 'Xorg' ]]; then
    srun -x compton
fi

_main() {
    srun -x osdd
    _xmonad
}

_herbstluftwm() {
    herbstluftwm --locked
}

_openbox() {
    srun -x tint2
    openbox
}

_xmonad() {
    srun -x tray
    xmonad
}

session=$1
export XSESSION=$session
case $session in
    main | herbstluftwm | openbox | xmonad)
        _$session
        ;;
    *)
        (( $# )) && command "$@"
        ;;
esac
