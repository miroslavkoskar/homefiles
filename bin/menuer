#!/usr/bin/env bash

set -eu -o pipefail
shopt -s extglob

prgname=${0##*/}

process() {
    local k=$1
    [[ ${2+set} ]] && local q=$2
    [[ $k ]] || return 0
    [[ ${map[$k]+set} ]] || return 0
    local args=${map[$k]} qu tmp
    if [[ $args =~ \{u?\} ]]; then
        [[ ${q+set} ]] || q=$(dmenu1 -p "$prompt $k" </dev/null)
        if [[ $args =~ \{u\} ]]; then
            qu=$(python -c "from urllib.parse import quote; print(quote(input(), safe='', errors='ignore'))" <<<"$q")
            printf -v tmp %q "$qu"
            args=${args//\{u\}/$tmp}
        fi
        printf -v tmp %q "$q"
        args=${args//\{\}/$tmp}
    fi
    printf '%s\n' "$args"
}

prompt=${MENUER:-$prgname}

declare -A map
while read -r k v; do
    [[ $k ]] || continue
    [[ $v ]] || {
        echo "$prgname: '$k' skipped because of missing value" >&2
        continue
    }
    map[$k]=$v
done

if [[ ${1+set} ]]; then
    process "$@"
else
    printf '%s\n' "${!map[@]}" | sort | dmenu -p "$prompt" |
        while read -r k q; do
            process "$k" "$q"
        done
fi
