#!/usr/bin/env bash

set -eu

attach() {
    local sname=$1
    local wname="s_$sname"
    xdotool search --classname "$wname" >/dev/null ||
        { term -n "$wname" trun mux "$sname" & }
}

mux -d aux &
mux -d tmp &
mux -d wrk &

wait

attach tmp
attach wrk

# wait a bit for tmp -> aux ordering
sleep 0.3
attach aux

wait
