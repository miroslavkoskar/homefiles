#!/usr/bin/env bash

set -eu

attach() {
    local sname wname
    sname=$1
    wname="s_$sname"
    xdotool search --classname "$wname" >/dev/null \
        || { term "$wname" - trun s "$sname" & }
}

s -d aux
s -d tmp
s -d wrk

attach tmp
attach wrk

# wait a bit for tmp -> aux ordering
sleep 0.5
attach aux

wait
