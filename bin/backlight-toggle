#!/bin/bash

max=15
val=10
low=8

# SEEALSO: xbacklight(1) - adjust backlight brightness using RandR extension

case $(</sys/class/backlight/acpi_video0/brightness) in
    "$max")
        ;;
    "$val")
        val=$low
        ;;
    "$low")
        val=$max
        ;;
esac

sudo bash -c "echo $val >/sys/class/backlight/acpi_video0/brightness"
