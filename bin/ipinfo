#!/usr/bin/env bash

set -eu

prgname=${0##*/}

# http://ifconfig.me/
# https://api.ipify.org/
# https://checkip.amazonaws.com/
# https://icanhazip.com/
# https://ip.anysrc.net/json
# https://ipinfo.io/
# https://wtfismyip.com/json

if [[ $prgname = ipinfo-tor ]]; then
    if (( ! $# )); then
        echo "usage: $prgname hostname" >&2
        exit 2
    fi
    resolve() { tor-resolve "$@" 2>/dev/null; }
fi

tmpfile=$(mktemp)
cleanup() { rm -f "$tmpfile"; }
trap cleanup EXIT

if (( $# )); then
    ip=$(resolve "$1")
    url=https://ipinfo.io/$ip
else
    url=https://ipinfo.io/
fi

stat=$(curl -sSL -w '%{http_code}\t%{url_effective}' -o "$tmpfile" "$url")
read -r scode surl <<<"$stat"
case $scode in
    200)
        jq . <"$tmpfile"
        ;;
    *)
        echo "HTTP $scode : $surl" >&2
        cat "$tmpfile" >&2
        exit 1
        ;;
esac
