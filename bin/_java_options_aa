#!/bin/bash

set -e

opts=(
    -Dawt.useSystemAAFontSettings=on
    -Dswing.aatext=true
)
export _JAVA_OPTIONS="$_JAVA_OPTIONS ${opts[*]}"

prgname=$(basename "$0")
if [ "$prgname" = '_java_options_aa' ]; then
    [ $# -eq 0 ] || exec "$@"
else
    basedir=$(dirname "$0")
    export PATH=$(sed -E "s,:?$basedir:?,:,g" <<<"$PATH")
    exec "$prgname" "$@"
fi
