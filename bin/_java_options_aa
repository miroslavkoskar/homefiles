#!/usr/bin/env bash

set -eu

prgname=${0##*/}

opts=(
    -Dawt.useSystemAAFontSettings=on
    -Dswing.aatext=true
)
export _JAVA_OPTIONS="${_JAVA_OPTIONS:+"$_JAVA_OPTIONS "}${opts[*]}"

if [[ $prgname != '_java_options_aa' ]]; then
    export PATH=$(sed -r "s,:?$HOME/bin:?,:,g" <<<"$PATH")
    set -- "$prgname" "$@"
fi

exec "$@"
