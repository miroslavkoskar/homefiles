#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    cat <<-EOF
	usage: $prgname [-f] pattern

	Match processes whose names (or command line if -f is specified) exactly
	match the pattern and have a matching DISPLAY environment variable set.
	EOF
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

fopt=0
while getopts 'fh' opt; do
    case $opt in
        f)
            fopt=1
            ;;
        h)
            usage
            ;;
        *)
            usage_err
            ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || usage_err

pgrep_args=(-x)
(( fopt )) && pgrep_args+=(-f)
pgrep_args+=(-- "$1")

pids=$(pgrep "${pgrep_args[@]}")

retstat=1
for i in $pids; do
    env="/proc/$i/environ"
    if [[ -r $env ]] && grep -Fzxq "DISPLAY=$DISPLAY" "$env"; then
        retstat=0
        echo "$i"
    fi
done

exit "$retstat"
