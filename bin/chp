#!/usr/bin/env bash

set -eu -o pipefail
shopt -s extglob

prgname=${0##*/}

_usage() {
    echo "usage: $prgname [-p profile] [arg]..."
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

bin=chromium
bin_name=$bin
profile=

case $prgname in
    ch)
        profile=default
        ;;
    chpg)
        bin=google-chrome-stable
        bin_name=google-chrome
        ;;
esac

while getopts p:h opt; do
    case $opt in
        p) profile=$OPTARG ;;
        h) usage ;;
        *) usage_err ;;
    esac
done
shift $((OPTIND-1))

# ----------------------------------------

if [[ ! $profile ]]; then
    filter='^(?!proxy-socks$)(?!proxy-tor$)(?!skel$).*$'
    profiles=(
        default
        dev
        lab
        plain
    )
    for p in ~/.config/"$bin_name".*; do
        [[ -d $p ]] || continue
        profiles+=("${p#*$bin_name.}")
    done
    profile=$(
        printf '%s\n' "${profiles[@]}" |
            sort -u | grep -P "$filter" |
            dmenu1 -p "$prgname"
    )
fi

[[ $profile ]] || exit 1

path=~/.config/$bin_name
path_skel=$path.skel

[[ $profile = default ]] || path+=.$profile

if [[ $profile != skel ]]; then
    if [[ ! -e $path && -e $path_skel ]]; then
        cp -a "$path_skel" "$path"
    fi

    if [[ $profile != default && ! -e $path/theme ]]; then
        mkdir -p "$path"/theme
        cd "$path"/theme

        case $profile in
            dev)            frame_color='[0, 153, 255]' ;;
            lab)            frame_color='[255, 34, 0]'  ;;
            plain)          frame_color='[38, 191, 48]' ;;
            proxy-socks)    frame_color='[0, 119, 119]' ;;
            proxy-tor)      frame_color='[100, 100, 100]'  ;;
            *)              frame_color='[255, 153, 0]' ;;
        esac
        tab_color='[220, 220, 220]'

        cat >manifest.json <<-EOF
		{
		    "manifest_version": 2,
		    "name": "theme",
		    "version": "0.1",
		    "theme": {
		        "colors": {
		            "frame": $frame_color,
		            "background_tab": $tab_color,
		            "background_tab_inactive": $tab_color,
		            "background_tab_incognito": $tab_color,
		            "background_tab_incognito_inactive": $tab_color
		        },
		        "images": {
		            "theme_ntp_attribution": "frame.png",
		            "theme_ntp_background": "frame.png"
		        },
		        "properties": {
		            "ntp_background_alignment": "top left",
		            "ntp_logo_alternate": 0
		        }
		    }
		}
		EOF
        pango-view -q --font='monospace 8' \
            --background=transparent --foreground=black --margin='1 2' \
            -t "$profile" -o frame.png
        set -- --load-extension="$path"/theme "$@"
    fi
fi

# shellcheck disable=SC2191
args=(
    #--extensions-on-chrome-urls
    #--force-device-scale-factor=1
    #--restore-last-session

    --enable-devtools-experiments
    --enable-gpu-rasterization
    --enable-native-gpu-memory-buffers
    --enable-tab-audio-muting
    --enable-zero-copy
    --ignore-gpu-blacklist
    --show-component-extension-options
    --show-saved-copy=primary
)

if [[ ${CH_DEBUG-} ]]; then
    # shellcheck disable=SC2191
    args+=(
        --enable-extension-activity-logging
        --enable-logging=stderr
        --v=1
    )
fi

exec "$bin" --user-data-dir="$path" "${args[@]}" "$@"
