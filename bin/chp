#!/bin/bash

set -e

case $1 in -h|--help)
    echo 'usage: chp [profile] [arg]...'
    exit
    ;;
esac

prgname=$(basename "$0")

profiles=(
    devel
    lab
    plain
    vpn
)

if [ $# -gt 0 ]; then
    for p in "${profiles[@]}"; do
        if [ "$p" = "$1" ]; then
            profile=$1
            shift
            break
        fi
    done
fi

if [ -z "$profile" ]; then
    profile=$(IFS=$'\n'; echo "${profiles[*]}" | dmenu1 "$prgname")
fi

[ -z "$profile" ] && exit 1

exec ch --user-data-dir="$HOME/.config/google-chrome-$profile" "$@"
