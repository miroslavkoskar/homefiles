#!/usr/bin/env bash

set -eu
shopt -s nullglob

prgname=${0##*/}

case ${1-} in -h | --help)
    echo "usage: $prgname [profile [arg]...]"
    exit
    ;;
esac

profile=
regexp='^(?!proxy-socks$)(?!proxy-tor$).*$'

if (( $# )); then
    profile=$1
    shift
fi

if [[ ! $profile ]]; then
    profiles=(
        devel
        lab
        plain
        proxy
    )
    for p in ~/.config/google-chrome-*; do
        profiles+=("${p#*google-chrome-}")
    done
    profile=$(
        IFS=$'\n'; echo "${profiles[*]}" |
        sort -u | grep -P "$regexp" |
        dmenu1 "$prgname"
    )
fi

[[ ! $profile ]] && exit 1

exec ch0 --user-data-dir="$HOME/.config/google-chrome-$profile" "$@"
