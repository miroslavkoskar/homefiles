#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

export LC_ALL=C

name='TPPS/2 IBM TrackPoint'
prop='libinput Button Scrolling Button'
id=$(xinput list | grep -F "$name" | xinput-ids | head -n1)

declare -i toggle=0
[[ $prgname = 'trackpoint-wheel-toggle' ]] && toggle=1

if (( !toggle && $# )); then
    valset=$1
else
    declare -i val=0 valset=2
    val=$(xinput list-props "$id" | awk -F: "/^\s*$prop \(.*\):/ {print \$2}")
    (( val == valset )) && valset=0
    retstat=$?
    (( !toggle )) && exit $retstat
fi

xinput set-prop "$id" "$prop" "$valset"
status-osd trackpoint_wheel
