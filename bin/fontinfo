#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

if (( ! $# )); then
    echo "usage: $prgname file/name" >&2
    exit 2
fi

file=$1
if [[ ! -e $file ]]; then
    file=$(fc-match -f '%{file}' "$file")
fi

{
    echo $'\n--------------------------------------------------'
    echo $'> fc-query\n'

    fc-query "$file"

    echo '--------------------------------------------------'
    echo $'> ftdump\n'

    ftdump -C -n "$file" |
        awk -v file="$file" '
            BEGIN {
                cmaps = 0
            }
            /^charmaps/ {
                cmaps = 1
            }
            cmaps && /\s+0x[0-9abcdef]+ =>/ {
                printf "%-60s : %c\n", $0, strtonum($1)
                next
            }
            { print }
        '
} |& $PAGER
