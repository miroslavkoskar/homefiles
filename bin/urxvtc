#!/usr/bin/env bash

set -eu

export RXVT_SOCKET=$XDG_RUNTIME_DIR/urxvtd$DISPLAY
bin=/usr/bin/urxvtc

declare -i retstat=0
"$bin" "$@" || retstat=$?

if (( retstat == 2 )); then
    exec 8>"$RXVT_SOCKET".lock
    flock -w 30 8 || exit 3

    retstat=0
    "$bin" "$@" || retstat=$?

    if (( retstat == 2 )); then
        (exec 8<&-; urxvtd -q -o -f)
        "$bin" "$@"
    fi
fi
