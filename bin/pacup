#!/bin/bash

echo $'\n--------------------------------------------------'
echo $'> Update [custom] repo:\n'

repo-update

echo $'\n--------------------------------------------------'
echo $'> Update (official & aur):\n'

yaourt -Syua

echo $'\n--------------------------------------------------'
echo $'> Update (devel):\n'

yaourt -Su --devel

echo $'\n--------------------------------------------------'
echo $'> Cleanup:\n'

yaourt -Qdt
echo

yaourt -C
