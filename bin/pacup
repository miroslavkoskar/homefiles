#!/usr/bin/env bash

echo $'\n--------------------------------------------------'
echo $'> Update (official & aur):\n'

pacaur -Syu

echo $'\n--------------------------------------------------'
echo $'> Cleanup:\n'

if pacman -Qqdt &>/dev/null; then
    pacman -Qqdt | sudo pacman -Rcsn -
fi

echo
exit 0
