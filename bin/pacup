#!/usr/bin/env bash

echo $'\n--------------------------------------------------'
echo $'> Update (official & aur):\n'

yaourt -Syua

echo $'\n--------------------------------------------------'
echo $'> Update (devel):\n'

yaourt -Su --devel

echo $'\n--------------------------------------------------'
echo $'> Cleanup:\n'

yaourt -Qdt
echo

yaourt -C
