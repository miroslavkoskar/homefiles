#!/bin/bash

set -e

if [ $(id -u) -ne 0 ]; then
    echo 'This script must be run with root privileges.' >&2
    exit 1
fi

list() {
    family=$1
    src="/proc/net/${family}_tables_names"

    [ -e "$src" ] || return 0
    while read -r table; do
        echo $'\n--------------------------------------------------'
        echo -e "> $family table $table:\n"
        "${family}tables" -t "$table" -nvL
    done <"$src"
}

list ip
list ip6

echo
