#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

_usage() {
    echo "usage: $prgname [play | pause | play-pause | stop | next | prev]"
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts 'h' opt; do
    case $opt in
        h)
            usage
            ;;
        *)
            usage_err
            ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || usage_err

# ----------------------------------------

declare -i blue=0
[[ $prgname = 'playctl-bluetooth' ]] && blue=1

bluectl() {
    if [[ $1 = 'play-pause' ]]; then
        local stat; stat=$(bluectl show | awk '/Status:/ {print $2}')
        case $stat in
            playing)
                bluectl pause
                ;;
            *)
                bluectl play
                ;;
        esac
        return
    fi
    # hack which happens to workaround bluetooth-player input issues
    (sleep 0.01; echo "$1"; sleep 0.01) | bluetooth-player 2>/dev/null
}

exec >/dev/null

(( blue )) && ctl='bluectl' || ctl='playerctl'

case $1 in
    prev)
        set -- previous
        ;&
    play | pause | play-pause | stop | next)
        "$ctl" "$1"
        ;;
    *)
        usage_err
        ;;
esac
