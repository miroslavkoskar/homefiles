#!/usr/bin/env bash

set -eu

prgname=${0##*/}

for i in /sys/class/power_supply/BAT${1:-*}; do
    [[ -e $i ]] || continue
    echo $'\n--------------------------------------------------'
    echo -e "> $i:\n"
    cat -- "$i/uevent"

    batcap=$(batcap "${i##*/BAT}")
    printf '\nbatcap [%%]: %s\n' "$batcap"
done
echo
