#!/usr/bin/env bash

set -eu -o pipefail

{
    ifile=${XCOMPOSEFILE:-~/.XCompose}
    echo $'\n--------------------------------------------------'
    printf '> %s\n\n' "$ifile"

    cat "$ifile"

    ifile="$HOME/.XCompose.rfc1345"
    echo $'\n--------------------------------------------------'
    printf '> %s\n\n' "$ifile"

    cat "$ifile"

    ifile="/usr/share/X11/locale/$LANG/Compose"
    echo $'\n--------------------------------------------------'
    printf '> %s\n\n' "$ifile"

    grep '^\s*<' "$ifile" | sort
} | $PAGER
