#!/usr/bin/env bash

set -eu

# pr - convert text files for printing
# fold - wrap each input line to fit in specified width
# fmt - simple optimal text formatter
# wrap - filter to word-wrap text
# par - filter for reformatting paragraphs

width=${1:-79}

type par &>/dev/null && exec par -w "$width"
type fmt &>/dev/null && exec fmt -u -w "$width"
type fold &>/dev/null && exec fold -s -w "$width"

exit 1
