#!/usr/bin/env bash

set -eu
shopt -s extglob

prgname=${0##*/}

tmpfile=$(mktemp)
cleanup() { rm -f "$tmpfile"; }
trap cleanup EXIT

src=${1:-$(xclip -o | head -c 255)}
case $src in
    http?(s)://*)
        curl -sS -F c=@- -w '%{redirect_url}\n' -o "$tmpfile" \
            https://ptpb.pw/u?r=1 <<<"$src"
        ;;
    *)
        exit 2
        ;;
esac

histfile="$HOME/.local/share/${prgname}_history"
ts=$(date +%F.%s)

cat >>"$histfile" <<-EOF

	$ts $prgname <$src>
	--------------------------------------------------
EOF
cat "$tmpfile" >>"$histfile"
