#!/bin/bash

set -e

pidfile='preview.pid'
prevfile='preview.jpg'

preview() {
    qiv -tiGfl --vikeys -T "$prevfile"
    rm -f "$pidfile"
    rm -f "$prevfile"
}

case $ACTION in
    init)
        ;;
    start)
        ;;
    download)
        cp "$ARGUMENT" "$prevfile"
        if [ ! -e "$pidfile" ]; then
            preview &
            echo $! >"$pidfile"
        fi
        ;;
    stop)
        ;;
esac
