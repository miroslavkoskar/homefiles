#!/bin/bash

pidfile='preview.pid'
prevfile='preview.jpg'

preview() {
    qiv -tiGfl --vikeys -T "$prevfile"
    rm "$pidfile"
    rm "$prevfile"
}

case "$ACTION" in
    init)
        ;;
    start)
        ;;
    download)
        cp "$ARGUMENT" "$prevfile"
        if [ ! -e "$pidfile" ]; then
            preview &
            echo $! >"$pidfile"
        fi
        ;;
    stop)
        ;;
esac

exit 0
