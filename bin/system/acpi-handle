#!/usr/bin/env bash

set -eu

(( $# )) || exit 1

# ----------------------------------------

if (( EUID )); then
    case $1 in
        button/micmute | button/f20)
            audio capture_toggle
            ;;
        button/mute)
            audio playback_toggle
            ;;
        button/screenlock)
            lock
            ;;
        button/volumedown)
            audio playback_down
            ;;
        button/volumeup)
            audio playback_up
            ;;
    esac
else
    case $1 in
        video/brightnessdown)
            backlight -10
            ;;
        video/brightnessup)
            backlight +10
            ;;
    esac
fi
