#!/usr/bin/env bash

set -eu -o pipefail

loghome='/var/log/local'
mkdir -p "$loghome"
cd "$loghome"

# ----------------------------------------

logbase='pacman-altered'
log="$logbase.$(date +%F.%s)"
pacman-altered >"$log" 2>"_$log"

# ----------------------------------------

logs=("$logbase"*)
if (( ${#logs[@]} >= 2 )); then
    diff -U 0 "${logs[-2]}" "${logs[-1]}" | filterdiff --remove-timestamps
fi
