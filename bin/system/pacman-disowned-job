#!/usr/bin/env bash

set -eu -o pipefail

loghome='/var/log/local'
mkdir -p "$loghome"
cd "$loghome"

# ----------------------------------------

logbase='pacman-disowned'
pacman-disowned >"$logbase.$(date +%F.%s)"

# ----------------------------------------

logs=("$logbase"*)
if (( ${#logs[@]} >= 2 )); then
    diff -U 0 "${logs[-2]}" "${logs[-1]}" | filterdiff --remove-timestamps
fi
