#!/usr/bin/env bash

set -eu
shopt -s nullglob

if (( $EUID )); then
    echo 'This script must be run with root privileges.' >&2
    exit 1
fi

prgname=${0##*/}

case ${1-} in
    1 | on | true)
        set -- 1
        ;;
    0 | off | false)
        set -- 0
        ;;
    *)
        if (( $# )); then
            echo "usage: $prgname [1 | on | true | 0 | off | false]" >&2
            exit 2
        fi

        declare -i online=
        for dev in /sys/class/power_supply/*; do
            [[ $(<"$dev/type") = 'Mains' ]] || continue
            (( $(<"$dev/online") )) || continue
            online=1
            break
        done

        set -- $((!online))
        ;;
esac

# ----------------------------------------

cpufreq_governor() {
    cpupower frequency-set -g "$1"
}

wlan() {
    local dev
    for dev in /sys/class/net/wl*; do
        dev=${dev##*/}
        iw dev "$dev" set "$@"
    done
}

exec >/dev/null

case $1 in
    1)
        cpufreq_governor powersave
        wlan power_save on
        ;;
    0)
        cpufreq_governor performance
        wlan power_save off
        ;;
esac
