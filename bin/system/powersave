#!/usr/bin/env bash

set -eu

if (( EUID )); then
    echo 'This script must be run with root privileges.' >&2
    exit 1
fi

prgname=${0##*/}

_usage() {
    echo "usage: $prgname [1 | on | true | 0 | off | false | auto]"
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts h opt; do
    case $opt in
        h) usage ;;
        *) usage_err ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || set -- auto

# ----------------------------------------

case $1 in
    1 | on | true)
        set -- 1
        ;;
    0 | off | false)
        set -- 0
        ;;
    auto)
        declare -i online=0
        for dev in /sys/class/power_supply/*; do
            [[ -e $dev ]] || continue
            type=$(<"$dev/type")
            [[ $type = 'Mains' ]] || continue
            online=$(<"$dev/online")
            (( online )) || continue
            online=1
            break
        done
        set -- $((!online))
        ;;
    *)
        usage_err
        ;;
esac

# ----------------------------------------

wlan() {
    local dev
    for dev in /sys/class/net/wl*; do
        [[ -e $dev ]] || continue
        dev=${dev##*/}
        iw dev "$dev" set "$@"
    done
}

exec >/dev/null

case $1 in
    1)
        cpupower frequency-set -g powersave
        cpupower set -b 15
        wlan power_save on
        ;;
    0)
        cpupower frequency-set -g performance
        cpupower set -b 0
        wlan power_save off
        ;;
esac
