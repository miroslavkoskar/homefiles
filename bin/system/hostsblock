#!/usr/bin/env bash

set -eu

if (( EUID )); then
    sudo hostsblock "$@"
    exit
fi

cd /etc/hosts.d

prgname=${0##*/}

mute() { "$@" &>/dev/null || true; }
cleanup() { systemctl reload dnsmasq; }
trap cleanup EXIT

if (( ! $# )); then
    mute mv off/10-* .
    exit
fi
case $1 in
    antiad)
        mute mv 10-* off
        mute mv off/10-hostsblock .
        ;;
    off)
        mute mv 10-* off
        ;;
    fetch)
        hostsblock-fetch
        ;;
    *)
        echo "usage: $prgname [antiad | off | fetch]" >&2
        exit 2
        ;;
esac
