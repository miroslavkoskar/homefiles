#!/usr/bin/env bash

set -eu

if (( EUID )); then
    sudo hostsblock "${0##*/}"
    exit
fi

prgname=$1

cd /etc/hosts.d

{
case $prgname in
    hostsblock-reload)
        rm -f /etc/hostsblock/hosts{,.old.gz}
        rm -rf /var/cache/hostsblock
        /usr/bin/hostsblock
        exit 0
        ;;
    hostsblock-off)
        mv 10-* off
        ;;
    hostsblock-antiad)
        mv 10-* off
        mv off/10-hostsblock .
        ;;
    *)
        mv off/10-* .
        ;;
esac
} 2>/dev/null || true

systemctl reload dnsmasq
