#!/usr/bin/env bash

set -eu

if (( EUID )); then
    sudo hostsblock "$@"
    exit
fi

cd /etc/hosts.d

prgname=${0##*/}

mute() { "$@" &>/dev/null || true; }

if (( ! $# )); then
    mute mv off/10-* .
else
    case $1 in
        antiad)
            mute mv 10-* off
            mute mv off/10-hostsblock .
            ;;
        off)
            mute mv 10-* off
            ;;
        fetch)
            systemctl start local-hostsblock-fetch.service
            exit
            ;;
        *)
            echo "usage: $prgname [antiad | off | fetch]" >&2
            exit 2
            ;;
    esac
fi
systemctl try-reload-or-restart dnsmasq
