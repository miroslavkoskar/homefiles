#!/bin/bash

killall -9 trayer > /dev/null 2>&1

trayer --edge top --align right \
       --width 100 --widthtype pixel \
       --height 17 --heighttype pixel \
       --SetDockType true --SetPartialStrut true \
       --transparent true --alpha 0 --tint 0x000000 \
       --monitor primary \
       --expand true &
