#!/usr/bin/env bash

set -eu

prgname=${0##*/}

name='default'
dispno=$(xserverq dispno)
fifo="$TMPDIR/osd-$UID/$name$dispno"

if [[ $prgname = 'osdd' ]]; then
    [[ -e $fifo ]] && exit 3

    mkdir -p -m 700 "${fifo%/*}"
    mkfifo -m 600 "$fifo"

    cleanup() {
        rm -f "$fifo"
        kill 0
    }
    trap cleanup EXIT

    aosd_cat -O 0 -p 2 -x -10 -y 25 -e 0 -d 5 \
             -t 2 -n local_osd -A 2 -b 215 \
             -B black -R yellow \
             -f 0 -u 1000 -o 0 \
             -l 1 \
             -k -m -i "$fifo"
    exit
fi

[[ ! -p $fifo ]] && exit 1
echo "$*" >"$fifo"
