#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    echo "usage: $prgname [-p port] [arg]..."
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts 'p:h' opt; do
    case $opt in
        p)
            popt=$OPTARG
            ;;
        h)
            usage
            ;;
        *)
            usage_err
            ;;
    esac
done
shift $((OPTIND-1))

exec chp proxy-socks \
    --proxy-server="socks://127.0.0.1:${popt:-1080}" \
    --proxy-bypass-list='<local>' \
    --host-resolver-rules='MAP * ~NOTFOUND, EXCLUDE 127.0.0.1, EXCLUDE ::1, EXCLUDE localhost' \
    "$@"
