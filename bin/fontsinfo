#!/usr/bin/env bash

set -eu

match() {
    printf '%-25s %s\n' "$1" "$(fc-match "$1")"
}
export -f match

echo $'\n--------------------------------------------------'
echo $'> Generic:\n'

parallel match <<-EOF
	cursive
	fantasy
	monospace
	sans-serif
	serif
EOF

echo $'\n--------------------------------------------------'
echo $'> Other:\n'

parallel match <<-EOF
	Andale Mono
	Arial
	Arial Black
	Arial Narrow
	Avant Garde
	Book Antiqua
	Bookman
	Calibri
	Century Gothic
	Consolas
	Copperplate Gothic
	Courier
	Courier New
	Frutiger
	Futura
	Garamond
	Geneva
	Georgia
	Gill Sans
	Helvetica
	Helvetica Condensed
	Impact
	Lucida Console
	Lucida Sans Unicode
	Monaco
	Palatino
	Palatino Linotype
	Symbol
	Tahoma
	Times
	Times New Roman
	Trebuchet
	Trebuchet MS
	Univers
	Verdana
	Webdings
	Wingdings
	Zapf Dingbats
EOF

echo
