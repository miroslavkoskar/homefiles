#!/usr/bin/env bash

set -e

# NOTE: xsel version 1.2.0 is broken!
#       "echo 'something' | xsel -o" should print content of
#       primary selection, but it will instead read stdin into it

echo $'\n--------- Primary --------------------------------'
xclip -o

echo $'\n--------- Clipboard ------------------------------'
xclip -o -selection clipboard

echo $'\n--------------------------------------------------'
echo
