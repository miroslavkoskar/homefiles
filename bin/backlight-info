#!/usr/bin/env bash

set -eu

for dev in /sys/class/backlight/*; do
    [[ -d $dev ]] || continue

    brightness=$(<"$dev/brightness")
    actual_brightness=$(<"$dev/actual_brightness")
    max_brightness=$(<"$dev/max_brightness")
    type=$(<"$dev/type")

    printf '%-40s %-8s %-8s %-8s %s\n' \
        "$dev" \
        "$brightness" \
        "$actual_brightness" \
        "$max_brightness" \
        "$type"
done
