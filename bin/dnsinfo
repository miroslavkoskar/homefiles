#!/usr/bin/env bash

echo

fqdn=$(hostname -f)
aliases=$(hostname -a)

printf 'DNS host name (FQDN):   %s\n' "$fqdn"
printf 'Aliases:                %s\n' "$aliases"

if hash resolvconf &>/dev/null; then
    echo $'\n--------------------------------------------------'
    echo $'> resolvconf:\n'

    resolvconf -l
    tail -v -n +1 /etc/resolvconf.conf
fi

echo $'\n--------------------------------------------------\n'

tail -v -n +1 /etc/resolv.conf
echo
