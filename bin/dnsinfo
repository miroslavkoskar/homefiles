#!/usr/bin/env bash

echo
printf 'DNS host name (FQDN):   %s\n' "$(hostname -f)"
printf 'Aliases:                %s\n' "$(hostname -a)"

echo $'\n--------------------------------------------------'
echo $'> resolvconf:\n'

resolvconf -l

echo $'--------------------------------------------------\n'
tail -n +1 /etc/{resolvconf.conf,resolv.conf}
echo
