#!/usr/bin/env bash

echo

fqdn=$(hostname -f)
aliases=$(hostname -a)

printf 'DNS host name (FQDN):   %s\n' "$fqdn"
printf 'Aliases:                %s\n' "$aliases"

echo $'\n--------------------------------------------------'
echo $'> resolvconf:\n'

resolvconf -l

echo $'--------------------------------------------------\n'

tail -n +1 /etc/{resolvconf.conf,resolv.conf}
echo
