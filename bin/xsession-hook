#!/bin/bash

set -e

event=$1
session=$XSESSION

run() {
    (pgrepallx "$1" >/dev/null || exec "$@") &
}

startup() {
    case $session in
        main)
            apod-bg &
            run clementine
            #run gpodder
            run workrave
            xup &
            ;;
    esac
}

case $event in
    startup)
        startup
        ;;
esac
