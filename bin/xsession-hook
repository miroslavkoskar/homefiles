#!/usr/bin/env bash

set -eu

screen=$(xserverq screen)
sfile=$XDG_RUNTIME_DIR/xorg/xsession:$screen
exec 8>"$sfile".lock
flock -n 8 && exit 3
session=$(<"$sfile")

sdu() { systemctl --user "$@"; }

case ${1-} in
    '')
        printf '%s\n' "$session"
        ;;

    pre)
        sdu start xsession@:"$screen".target
        srun -rx compton
        srun -rx osdd
        srun -rx -n polkit-agent /usr/lib/mate-polkit/polkit-mate-authentication-agent-1
        srun -rxl -n sxhkd bash -c 'sleep 1; exec sxhkd'
        case $session in
            openbox | xfwm4)
                srun -rxl tint2
                ;;
            xmonad | main)
                srun -rx tray
                ;;
        esac
        ;;

    post)
        sdu stop xsession@:"$screen".target
        srun -NX xterm
        ;;

    exec)
        case $session in
            kodi)
                exec kodi -fs --debug
                ;;
            main)
                exec xmonad
                ;;
            openbox)
                exec openbox --startup 'xsession-hook startup'
                ;;
            rio)
                exec rio -term term -virtuals 4
                ;;
            xfwm4)
                exec xfwm4 --compositor=off
                ;;
            *)
                exec "${@:2}"
                ;;
        esac
        ;;

    startup)
        case $session in
            main)
                srun -xl clementine
                srun -x workrave
                # xup &
                wait
                ;;
        esac
        ;;

    *)
        exit 2
        ;;
esac
