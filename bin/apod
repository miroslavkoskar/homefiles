#!/usr/bin/env bash

set -eu

prgname=${0##*/}

path="$HOME/.cache/apod/latest"

case ${1-} in
    get)
        url=$(apodurl)
        curl -sSL --create-dirs -o "$path" --url "$url" || exit 1
        ;;
    set)
        feh --bg-max --no-fehbg "$path"
        ;;
    *)
        echo "usage: $prgname {get | set}" >&2
        exit 2
        ;;
esac
