#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

echo $'\n--------------------------------------------------'
echo $'> _ICC_PROFILE atoms:\n'

dall=$({ dispwin -? || true; } |& sed -nr "s/^\\s*([0-9]+ = 'Monitor [0-9]+, Output .*)/\\1/p")
[[ $dall ]] || exit 1
readarray -t dall <<<"$dall"

for (( i=0; i<${#dall[@]}; i++ )); do
    (( i > 0 )) && atom="_ICC_PROFILE_$i" || atom='_ICC_PROFILE'
    xprop -root -len 8 "$atom"
done

echo $'\n--------------------------------------------------'
echo $'> Select display to continue:\n'

printf '%s\n' "${dall[@]}"
echo

read -N1 -rsp 'Your choice: ' dsel
echo

if [[ ! $dsel =~ ^[1-9]$ ]] || (( dsel > ${#dall[@]} )); then
    echo "$prgname: error: invalid choice" && exit 2
fi
printf '%s\n' "${dall[$((dsel-1))]}"

# ----------------------------------------

# ArgyllCMS doesn't handle SIGINT properly
trap 'trap - INT; kill -INT -$$' INT

gopts=(-v "-d$dsel" -ye -Yp -P '0.5,0.5,2.0')

echo $'\n--------------------------------------------------'
echo $'> Calibrated display:\n'

dispcal "${gopts[@]}" -r

echo $'\n--------------------------------------------------'
echo $'> Uncalibrated display:\n'

dispcal "${gopts[@]}" -R
echo
