#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

kernel_release=$(uname -r)
kernel_version="v${kernel_release%%-*}"

declare -A map
while read -r k v; do
    [[ $k ]] && map["$k"]=$v
done <<-EOF

    0               b https://mkoskar.com/
    ant             b file:///usr/share/doc/apache-ant/index.html
