#!/usr/bin/env bash

set -eu

prgname=${0##*/}

cleanup() {
    local retstat=$?
    if (( $retstat == 0 )); then
        notify "___ $prgname ___"
    else
        notify "___ $prgname FAIL ___"
    fi
}
trap cleanup EXIT

input=$(grep -P '^From:')
{
    goobook add <<<"$input"
    goobook reload
} &
