#!/bin/bash

set -e

prgname=$(basename "$0")

cleanup() {
    exitcode=$?
    if [ $exitcode -eq 0 ]; then
        notify "___ $prgname ___"
    else
        notify "___ $prgname FAIL ___"
    fi
}
trap cleanup EXIT

# ----------------------------------------

input=$(grep -P '^From:')

{
    goobook add <<<"$input"
    goobook reload
} &
