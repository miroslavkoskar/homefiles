#!/bin/bash

set -e

prgname=$(basename "$0")

cleanup() {
    exitcode=$?
    if [ $exitcode -eq 0 ]; then
        notify "___ $prgname ___"
    else
        notify "___ $prgname FAIL ___"
    fi
}
trap cleanup EXIT

# ----------------------------------------

add() {
    local input=$1
    goobook add <<<"$input"
}

input=$(grep -P '^From:')
add "$input" &
