#!/usr/bin/env bash

headcat() { head -v -n -0 "$@"; }

info() {
    local label=$1
    shift
    [[ $label = - ]] && label=$*
    echo $'\n--------------------------------------------------'
    printf '> %s\n\n' "$label"
    "$@"
}

{
    info - amixer info

    info - amixer -c 0 info

    info /proc/asound headcat /proc/asound/{cards,devices,modules,pcm,version}

    info - aplay -l

    info - arecord -l

    info - aplay -L

    echo
} |& $PAGER
