#!/bin/bash

set -e

if [ "$(basename "$0")" = 'dmenu1' ]; then
    set -o pipefail
    dmenu "$@" | head -n1
    exit
fi

exec /usr/bin/dmenu -nb '#3a3a3a' -sb '#000000' \
                    -nf '#e4e4e4' -sf '#87cefa' \
                    -fn '-*-terminus-bold-r-*-*-16-*-*-*-*-*-*-*' \
                    -i -p "${1:->}"
