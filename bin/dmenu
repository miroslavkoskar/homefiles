#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

if [[ $prgname = 'dmenu1' ]]; then
    set -o pipefail
    dmenu "$@" | head -n1
    exit
fi

exec /usr/bin/dmenu -nb '#3a3a3a' -sb '#000000' \
                    -nf '#e4e4e4' -sf '#87cefa' \
                    -fn '-*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*' \
                    -i -p "${1:->}"
