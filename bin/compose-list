#!/usr/bin/env bash

set -eu -o pipefail

{
    echo '--------------------------------------------------'
    echo $'> ~/.XCompose:\n'

    cat ~/.XCompose

    echo $'\n--------------------------------------------------'
    echo -e "> /usr/share/X11/locale/$LANG/Compose:\n"

    grep '^\s*<' "/usr/share/X11/locale/$LANG/Compose" | sort
} | "$PAGER"
