#!/bin/bash

echo -e '\n--------------------'
echo "TERM = $TERM"
echo "TERMINFO = $TERMINFO"
echo "TERMINFO_DIRS = $TERMINFO_DIRS"
echo
infocmp -1 | sed -nE '1,2p;/\bkbs=/p'

echo -e '\n--------------------'
stty -a | perl -n -e '/\b(erase = .*?);/ && print "stty $1\n"'

echo -e '\n--------------------'
read -N 1 -p 'Press BS:      '
echo
read -N 1 -p 'Press CTRL+BS: '
echo
read -N 1 -p 'Press CTRL+H:  '
echo
echo
