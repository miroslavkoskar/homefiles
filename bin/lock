#!/bin/bash

set -e

export TERM='linux'
export PATH="/home/mirci/bin:$PATH"

USER='mirci'

VTOLD=$(fgconsole)
VTNEW=30
exec 0<>/dev/tty$VTNEW >&0 2>&1 

SYSRQ_PATH='/proc/sys/kernel/sysrq'
SYSRQ_OLD=$(cat "$SYSRQ_PATH")
echo 0 > "$SYSRQ_PATH"

function cleanup {
    vtswitch-lock -u
    chvt $VTOLD
    clear
    echo $SYSRQ_OLD > "$SYSRQ_PATH"
}
trap cleanup EXIT

clear
tput civis
setterm -blank 1
chvt $VTNEW
vtswitch-lock

sudo -u $USER away -C away
read
