#!/bin/bash

set -e

sub="$1"
shift

case "$sub" in
    n):
        printf '\e]4;%s;%s\e\' "$1" "$2"
        ;;
    fg):
        printf '\e]10;%s\e\' "$1"
        ;;
    bg):
        printf '\e]11;%s\e\' "$1"
        ;;
    cur):
        printf '\e]12;%s\e\' "$1"
        ;;
    *):
        exit 1
esac
