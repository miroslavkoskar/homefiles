#!/usr/bin/env bash

set -eu -o pipefail
shopt -s extglob

prgname=${0##*/}

[[ -t 1 ]] || exec >/dev/null
exec 2>/dev/null

cleanup() {
    local retstat=$? tmp tmp_
    if (( retstat )); then
        tmp=$(squash <<<"$src" | asciionly)
        tmp_=${tmp:0:40}
        (( ${#tmp} > ${#tmp_} )) && tmp_+='â€¦'
        notify -u critical "$prgname $tmp_"
    fi
}
trap cleanup EXIT

src=${1:-$(xclip -o | head -c 255)}
case $src in
    http?(s)://tvcatchup.com/* | \
    http?(s)://www.arconaitv.me/* | \
    http?(s)://www.rtvs.sk/* | \
    http?(s)://www.ustream.tv/* \
        )
        printf -v title '%q' "$src"
        streamlink \
            --loglevel=error \
            --player-args="--title=$title --force-media-title=$title -- {filename}" \
            -- "$src"
        exit
        ;;
    http?(s)://* \
        )
        [[ -t 1 ]] || exec >/dev/null 2>&1
        mpv --force-window=immediate --force-media-title="${2-}" -- "$src"
        ;;
    *)
        exit 3
        ;;
esac
