#!/usr/bin/env bash

set -eu

prgname=${0##*/}

[[ -t 1 ]] || exec >/dev/null
exec 2>/dev/null

cleanup() {
    local retstat=$?
    if (( retstat )); then
        notify "___ $prgname FAIL ___"
    fi
}
trap cleanup EXIT

src=${1:-$(xclip -o | head -c 255)}
mpv --force-window -- "$src" || livestreamer --loglevel=error -- "$src"
