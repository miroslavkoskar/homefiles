#!/usr/bin/env bash

set -eu

check() {
    echo $'\n--------------------------------------------------'
    printf '> %s\n' "$*"
    printf '> %s\n\n' "$("$1" --version)"
    "$@"
}

if [[ ${VIRTUAL_ENV-} ]]; then
    check pip list
else
    check /usr/bin/pip list --user
    check /usr/bin/pip2 list --user
fi
echo
