#!/usr/bin/env bash

set -eu

check() {
    echo $'\n--------------------------------------------------'
    printf '%s\n' "$*"
    printf '%s\n' "$("$1" --version)"
    "$@"
}

if [[ ${VIRTUAL_ENV-} ]]; then
    check pip list
fi

check /usr/bin/pip list --user
check /usr/bin/pip2 list --user
echo
