#!/bin/bash

set -e

prgname=$(basename "$0")

(
    [ -t 1 ] || exec 2>/dev/null

    if [ "$prgname" != 'xscreen0' -a "$(xserverq name)" = 'Xorg' ]; then
        if [ "$prgname" = 'xscreen-mobile' ]; then
            autorandr -l mobile --force
        else
            autorandr -c -d mobile --force
        fi
    fi
)

xset b off s off dpms 0 0 300

xset m 4 2
xsetroot -cursor_name left_ptr

has-cmd hsetroot && hsetroot || xsetroot -solid black
