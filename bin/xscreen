#!/usr/bin/env bash

set -u

xserver=$(xserverq name)
if [[ $xserver = 'Xorg' ]]; then
    if (( ! $# )); then
        autorandr -c -d mobile --force
    elif [[ $1 != '-' ]]; then
        autorandr -l "$1" --force
    fi
    xrandr --dpi 96
    NOOSD=1 touchpad off
    NOOSD=1 trackpoint-wheel on
fi

NOOSD=1 xkb -

xset b off s off dpms 0 0 300 r rate 500 35

numlockx on

xsetroot -cursor_name left_ptr

hsetroot || xsetroot -solid black

apod set &

true
