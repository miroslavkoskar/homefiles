#!/bin/bash

set -e

if [ "$(xserverq name)" = 'Xorg.bin' ]; then
    if [ "$(basename "$0")" = 'xscreen-mobile' ]; then
        autorandr -l mobile
    else
        autorandr -c -d mobile --force
    fi
fi

xset b off s off dpms 0 0 300
xsetroot -cursor_name left_ptr

xsetroot -solid black
command -v hsetroot >/dev/null && hsetroot || true
