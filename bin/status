#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

if [[ $prgname = 'status-osd' ]]; then
    out=$(status "$@")
    [[ -t 1 ]] && printf '%s\n' "$out"
    osd "$out" || true
    exit 0
fi

status_audio() {
    local pval rval
    pval=$(amixer get Master \
        | gawk 'match($0, /\[([0-9]*%)\].*\[(on|off)\]/, a) {print a[2] " " a[1]}' \
        | head -n1)
    amixer -c 0 get Headphone,1 | grep -Fq 'Playback [on]' && pval="$pval +dock"
    rval=$(amixer get Capture \
        | gawk 'match($0, /\[([0-9]*%)\].*\[(on|off)\]/, a) {print a[2] " " a[1]}' \
        | head -n1)
    printf 'audio: %s / %s\n' "$pval" "$rval"
}

status_backlight() {
    local src val
    src='/sys/class/backlight/acpi_video0'
    printf -v val '%s / %s' "$(<"$src/brightness")" "$(<"$src/max_brightness")"
    printf 'backlight: %s\n' "$val"
}

status_bluetooth() {
    local val
    val=$(bluetooth | awk -F= '{gsub(/^[ \t]+/, "", $2); print $2}')
    printf 'bluetooth: %s\n' "$val"
}

status_dpms() {
    local val='-'
    if xset q &>/dev/null; then
        xset q | grep -Fq 'DPMS is Enabled' && val='on' || val='off'
    fi
    printf 'dpms: %s\n' "$val"
}

status_trackpoint_wheel() {
    local val='-'
    if xset q &>/dev/null; then
        trackpoint-wheel && val='on' || val='off'
    fi
    printf 'trackpoint wheel: %s\n' "$val"
}

status_wifi() {
    local val
    val=$(wifi | awk -F= '{gsub(/^[ \t]+/, "", $2); print $2}')
    printf 'wifi: %s\n' "$val"
}

status_xkb() {
    local val='-'
    if xset q &>/dev/null; then
        val=$(xkblayout-state print '%s')
    fi
    printf 'xkb: %s\n' "$val"
}

case ${1-} in
    audio)
        status_audio
        ;;
    backlight)
        status_backlight
        ;;
    bluetooth)
        status_bluetooth
        ;;
    dpms)
        status_dpms
        ;;
    trackpoint-wheel)
        status_trackpoint_wheel
        ;;
    wifi)
        status_wifi
        ;;
    xkb)
        status_xkb
        ;;
    *)
        status_audio
        status_backlight
        status_bluetooth
        status_dpms
        status_trackpoint_wheel
        status_wifi
        status_xkb
        ;;
esac
