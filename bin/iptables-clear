#!/bin/bash

set -e

if [ $(id -u) -ne 0 ]; then
    echo 'This script must be run with root privileges.'
    exit 1
fi

#iptables -P INPUT ACCEPT
#iptables -P FORWARD ACCEPT
#iptables -P OUTPUT ACCEPT
#iptables -F -X
#iptables -t nat -F -X
#iptables -t mangle -F -X

{
    [ -e /proc/net/ip_tables_names ] && /usr/lib/systemd/scripts/iptables-flush
    [ -e /proc/net/ip6_tables_names ] && /usr/lib/systemd/scripts/iptables-flush 6
} >/dev/null

exit 0
