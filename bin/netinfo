#!/usr/bin/env bash

set -eu -o pipefail

{
    exec 2>&1
    echo $'\n--------------------------------------------------'
    echo $'> ARP/NDISC cache:\n'

    ip neigh

    echo $'\n--------------------------------------------------'
    echo $'> Bridges:\n'

    brctl show

    echo $'\n--------------------------------------------------'
    echo $'> Addressing:\n'

    ip addr
    echo

    ip maddr

    echo $'\n--------------------------------------------------'
    echo $'> Routing:\n'

    ip rule
    echo

    routel local
    echo

    routel main
    echo
} | $PAGER
