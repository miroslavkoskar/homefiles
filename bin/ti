#!/usr/bin/env bash

set -eu

tzprint() {
    local tz=$1 ts=$2
    case $tz in
        -)
            echo $'\n---------------------------------------------------------'
            return
            ;;
        +)
            echo
            return
            ;;
        local)
            tz=$(readlink -f /etc/localtime)
            tz=${tz#/usr/share/zoneinfo/}
            ;;
        *)
            export TZ=$tz
            ;;
    esac
    ts=$(date -R -d "$ts")
    printf '%-25s %s\n' "$tz" "$ts"
}

tzs=(
    +
    local
    UTC
    -
    US/Pacific
    US/Mountain
    US/Central
    US/Eastern
    +
    America/Vancouver
    America/Los_Angeles
    America/Toronto
    America/New_York
    -
    WET
    CET
    EET
    +
    Europe/London
    Europe/Brussels
    Europe/Amsterdam
    Europe/Prague
    Europe/Moscow
    -
    Asia/Tel_Aviv
    Asia/Dubai
    Asia/Singapore
    Asia/Shanghai
    Asia/Tokyo
    -
    Australia/West
    Australia/North
    Australia/South
    +
    Australia/Sydney
    -
    Pacific/Auckland
)

ts=$(date -Ins)
for tz in "${tzs[@]}"; do
    tzprint "$tz" "$ts"
done

echo
