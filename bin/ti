#!/usr/bin/env bash

set -eu

tzprint() {
    local tz
    for tz in "$@"; do
        case $tz in
            -)
                echo $'\n---------------------------------------------------------'
                continue
                ;;
            +)
                echo
                continue
                ;;
            local)
                tz=$(readlink -f /etc/localtime)
                tz=${tz#/usr/share/zoneinfo/}
                ;;
            *)
                export TZ=$tz
                ;;
        esac
        printf '%-25s %s\n' "$tz" "$(date -R)"
    done
}

tzs=(
    +
    local
    UTC
    -
    US/Pacific
    US/Mountain
    US/Central
    US/Eastern
    +
    America/Vancouver
    America/Los_Angeles
    America/Toronto
    America/New_York
    -
    WET
    CET
    EET
    +
    Europe/London
    Europe/Brussels
    Europe/Amsterdam
    Europe/Prague
    Europe/Moscow
    -
    Asia/Tel_Aviv
    Asia/Dubai
    Asia/Singapore
    Asia/Shanghai
    Asia/Tokyo
    -
    Australia/West
    Australia/North
    Australia/South
    +
    Australia/Sydney
    -
    Pacific/Auckland
)
tzprint "${tzs[@]}"

echo
