#!/usr/bin/env bash

set -eu

prgname=${0##*/}

if [[ $prgname = 'b0' ]]; then
    BBIN='ffp'
    args=(-p quarantine -- --private-window)
else
    BBIN=${BBIN:-ff}
    args=(--)
fi

case $BBIN in
    w3m)
        exec "$BBIN" "$@"
        ;;
    *)
        exec &>>~/.local/share/"$prgname".out
        exec "$BBIN" "${args[@]}" "$@" &
        ;;
esac
