#!/bin/bash

set -e

tmp="${TMPDIR:-/tmp}/pacman-altered-$UID-$$"
mkdir "$tmp"
trap 'rm -rf "$tmp"' EXIT

cd "$tmp"
pacman -Qkk >out 2>err | true
cat out err | sed -nr -e 's/^backup file: //p' \
                      -e 's/^warning: //p' | sort

paccheck --quiet --files --file-properties \
         --backup --noextract --noupgrade | sort >&2
