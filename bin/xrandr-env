#!/bin/bash

OUTPUTS=(LVDS1 VGA1 HDMI1 HDMI2 HDMI3 DP1 DP2 DP3)

function xrandr-off() {
    local cmd='xrandr'
    for i in ${OUTPUTS[*]}; do
        cmd="$cmd --output \"$i\" --off"
    done
    eval $cmd
}

function xrandr-single() {
    f="$1"
    shift
    xrandr-off
    xrandr --output "$f" --auto "$@"
}

function xrandr-dual() {
    f="$1"
    s="$2"
    shift 2
    xrandr-off
    xrandr --output "$f" --auto --output "$s" --auto "$@"
}
