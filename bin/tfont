#!/bin/bash
#
# Set passed font or scroll through predefined list.
#
# :Copyright: (c) 2013 Miroslav Koskar (http://miroslavkoskar.com/)
# :License: BSD 2-clause

set -e

format='%s\e\\'
if [ -n "$TMUX" ]; then
    format='\ePtmux;\e%s\a\e\\'
elif [ "${TERM%%-*}" = 'screen' ]; then
    format='\eP%s\a\e\\'
fi

process() {
    printf -v seq '\e]50;%s' "$1"
    printf "$format" "$seq"
}

processor() {
    while read -s line; do
        process "$line"
    done
}

if [ -z "$1" ]; then
    scroller 'xft:local_terminal_sized' \
             'xft:local_terminal:pixelsize=20' \
             'xft:Monaco:size=10' \
             'xft:Monaco:size=11' \
             'xft:Source\ Code\ Pro:size=10' \
             | processor
else
    process "$1"
fi
