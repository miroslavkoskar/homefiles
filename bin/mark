#!/usr/bin/env bash

set -eu -o pipefail
shopt -s nullglob

input=$*
(( $# )) || input=$(head -c 255)
[[ $input ]] || exit 1

prgname=${0##*/}
subname=${prgname##mark-}

cd ~/projects/notes/src/02-marks

outs=(
    "$subname.rst"
    "$subname"-*.rst
)
out="${outs[0]}"

case $prgname in
    mark-path)
        buf=$(pathmark "$input")
        ;;
    mark-pkg)
        buf=$(pkgmark "$input")
        ;;
    mark-url)
        buf=$(urlmark "$input")
        ;;
    *)
        buf=$input
        ;;
esac

[[ $buf ]] || exit 1

if (( ${#outs[@]} > 1 )); then
    out=$(IFS=$'\n'; echo "${outs[*]}" | dmenu1 "$prgname")
fi

[[ $out ]] || exit 1

(
    flock 1
    echo
    sed -r 's/^/    /' <<<"$buf"
) >>"$out"
