#!/bin/bash
#
# Wrapper script to use Vim as a man(1) pager.
# Install by running `export MANPAGER='manpg'`.
#
# :Copyright: (c) 2013 Miroslav Koskar (http://miroslavkoskar.com/)
# :License: BSD 2-Clause

if [ -t 0 ]; then
    pg -c "set ft=man | Man $@"
    exit
fi

PAGER_TITLE="$MAN_PN" exec pgx -c 'set ft=man'
