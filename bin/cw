#!/bin/bash

opts=(-m -f '%I, %j (%l, %L) at %a
----------------------------------------
Condition: %c
Clouds: %d%%
Barometric pressure: %bhPa
Precipitation: %pmm
Relative humidity: %P%%
Temperature: Low: %h째C / High: %H째C / Current: %t째C
Wind: %X (%x째), %wmps, %Wmps
Sun: %s / %S
')

echo
shaman "${opts[@]}" -l 'Martin,SK'
shaman "${opts[@]}" -l 'Bratislava,SK'
shaman "${opts[@]}" -l 'Prague,CZ'
