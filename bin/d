#!/usr/bin/env bash

# -u    output NUM (default 3) lines of unified context
# -d    try hard to find a smaller set of changes
# -p    show which C function each change is in
# -r    recursively compare any subdirectories found
# -N    treat absent files as empty
# -a    treat all files as text

set -eu

# TODO: this dosn't play with pipefail, also it doesn't preserve diff's exit status

set -- -udprN "$@"
cmd=(diff "$@")
prgname=${0##*/}

main() {
    case $prgname in
        d0)
            "${cmd[@]}"
            ;;
        *)
            tmpfile=$(mktemp)
            trap 'rm -f "$tmpfile"' EXIT
            echo '---'
            "${cmd[@]}" |
                    filterdiff -v --remove-timestamps --annotate --strip=1 \
                                  --addoldprefix=a/ --addnewprefix=b/ |
                    tee "$tmpfile" |
                    diffstat -p1
            echo
            cat "$tmpfile"
            ;;
    esac
}

# execute explicitly in subshell to workaround not firing trap
( main ) | PAGER_TITLE=${cmd[@]} pg -c 'set ft=diff'
