/set buflist.format.buffer "${format_number}${indent}${color_hotlist}${if:${type}!=channel?${if:${type}==private?${color:white}+${color:lightcyan}:${color:lightgreen}}:}${cut:11,${color:white}+,${name}}${format_hotlist}"
/set buflist.format.buffer_current "${color:,237}${format_number}${indent}${color:white}${if:${type}==private?+:}${color:*white}${cut:11,${color:white}+,${name}}${format_hotlist}"
/set buflist.format.hotlist " ${hotlist}"
/set buflist.format.hotlist_highlight "${color:lightred}"
/set buflist.format.hotlist_low "${color:default}"
/set buflist.format.hotlist_message "${color:yellow}"
/set buflist.format.hotlist_private "${color:yellow}"
/set buflist.format.indent " "
/set buflist.format.number "${number} "
/unset buflist.look.display_conditions

