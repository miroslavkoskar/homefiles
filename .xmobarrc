-- ~/.xmobarrc

Config {
    font = "xft:local_xmobar"
    , bgColor = "#000000"
    , fgColor = "#C0C0C0"
    , position = TopP 0 100
    , commands = [
        Run StdinReader
        , Run Locks
        , Run Weather "LKPR" ["-t", "<skyCondition>|<tempC>"] 600
        , Run Battery ["-t", "<watts>|<left>|<timeleft>", "-L", "20", "-H", "50", "-l", "#FF5555", "-n", "#EFEFEF", "--",
                       "-L", "0", "-H", "12", "-m", "#55FF55", "-h", "#FF5555"] 50
        , Run Wireless "wlan0" ["-t", "q<quality>"] 50
        , Run Cpu ["-t", "<total>", "-L", "8", "-H", "30", "-n", "#EFEFEF", "-h", "#FF5555", "-p", "2", "-c", "0"] 30
        , Run Memory ["-t", "<usedratio>", "-p", "2", "-c", "0"] 50
        , Run Date "%d.%m|%k:%M" "date" 600
    ]
    , alignSep = "}{"
    , template = "%StdinReader% }{ <fc=#FF5555>%locks%</fc>  %LKPR%  %battery%  %wlan0wi%  %cpu%|%memory%  %date%"
}
