# vim: ft=muttrc

set my_example = $my_mail/example

folder-hook $my_example ' \
    set my_base = $my_example; \
    source ~/.mutt/accounts/example_hook \
'

# alternates -group me <regexp>...

mailboxes $my_example
mailboxes $my_example/INBOX

# IMAP
set my_example_imap = imaps://<user>@<host>:993
set my_example_imap_pass = "`authinfo <machine> <login>`"

account-hook $my_example_imap 'set imap_pass = $my_example_imap_pass'

folder-hook $my_example_imap ' \
    set my_base = $my_example_imap; \
    set folder = $my_base; \
    source ~/.mutt/accounts/example_hook \
'
