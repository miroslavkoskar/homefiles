# vim: ft=muttrc

set my_example_pass = `authinfo <machine> <login>`

# imap
set my_example_imap = 'imaps://<user>@<host>:993/'
account-hook $my_example_imap set imap_pass = $my_example_pass
folder-hook $my_example_imap 'set folder = $my_example_imap; \
                              set read_only'

# local
set my_example = "$my_mail/example"
folder-hook $my_example source ~/.mutt/accounts/example_hook

# smtp
set my_example_smtp = 'smtps://<user>@<host>:587/'
account-hook $my_example_smtp set smtp_pass = $my_example_pass

mailboxes $my_example/INBOX
