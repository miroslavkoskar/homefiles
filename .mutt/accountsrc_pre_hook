# vim: ft=muttrc

set my_base = $my_mail
set folder = $my_base

set copy
set postpone = ask-yes
unset from
unset mbox
unset move

# IMAP
set my_imap = _imap_

# Mailboxes
set spoolfile = _spoolfile_
set record = _record_
set postponed = _postponed_
unset trash
set my_mbarchived = _archived_
set my_mbtrash = _trash_

# Other
unset hostname
unset pgp_sign_as # this will use GPG's default-key
unset query_command
unset sendmail

# Hooks
unhook save-hook
save-hook . $my_base/%O

# Headers
my_hdr OpenPGP: url=https://keybase.io/mkoskar/key.asc
unmy_hdr Organization

# Key bindings / Macros
bind index,pager A noop
bind index,pager \ez noop
macro index q <change-folder>!<enter> 'go to spoolfile mailbox'
