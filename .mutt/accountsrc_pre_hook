# vim: ft=muttrc

set folder = $my_mail
set my_base = $my_mail

set copy
set postpone = ask-yes
unset from
unset mbox
unset move
unset read_only

# imap
set my_imap = _imap_

# mailboxes
set spoolfile = _spoolfile_
set record = _record_
set postponed = _postponed_
set my_mbarchived = _archived_
set my_mbtrashed = _trashed_

# other
reset query_command
reset sendmail

bind index q quit
bind index,pager A noop
bind index,pager \ez noop
