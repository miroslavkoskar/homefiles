# See also: http://tidy.sourceforge.net/docs/quickref.html

# HTML, XHTML, XML
anchor-as-name: no
join-styles: no
preserve-entities: yes
show-body-only: auto

# Diagnostics
#show-errors: 0
#show-info: no
#show-warnings: no

# Pretty Print
indent-spaces: 4
indent: auto
sort-attributes: alpha
tab-size: 4
wrap-asp: no
wrap-jste: no
wrap-php: no
wrap-sections: no
wrap: 0

# Miscellaneous
quiet: yes
tidy-mark: no
