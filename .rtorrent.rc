# vim: ft=cfg

# network
port_range = 7881-7889
encryption = allow_incoming,try_outgoing,enable_retry

# limits
max_peers = 50
max_peers_seed = 50
max_uploads = 20
upload_rate = 60
download_rate = 0

# default dirs
directory = ~/download/torrents
session = ~/.rtorrent

# watch dirs
schedule = watch_directory,5,5,load_start=~/download/*.torrent
