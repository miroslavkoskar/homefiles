" vim: ft=vim

set autocomplete=false
set followhints=1
set hlsearch
set showmode
set toolbars=none,tabs,navigation
set wildmode=list:longest,full

noremap <A-j> 5j
noremap <A-k> 5k

nnoremap <A-0> :tablast<CR>
nnoremap <A-1> 1gt
nnoremap <A-2> 2gt
nnoremap <A-3> 3gt
nnoremap <A-4> 4gt
nnoremap <A-5> 5gt
nnoremap <A-6> 6gt
nnoremap <A-7> 7gt
nnoremap <A-8> 8gt
nnoremap <A-9> 9gt
nnoremap <A-h> gT
nnoremap <A-l> gt

nnoremap H :back<CR>
nnoremap L :forward<CR>

nnoremap <C-Space> :nohls<CR>

cnoremap <C-o> <Tab>
cnoremap <C-k> <S-Tab>
cnoremap <C-p> <Up>
cnoremap <C-n> <Down>
