set bell-style none
set bind-tty-special-chars off
set colored-stats
set completion-prefix-display-length 2
set editing-mode vi
set keyseq-timeout 500
set mark-symlinked-directories on
set show-all-if-ambiguous on
set skip-completed-text on

set keymap vi-insert

"\C-l": clear-screen
"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-o": menu-complete
"\C-k": menu-complete-backward
"\C-w": backward-kill-word

$if bash
    set show-mode-in-prompt on

    "\C-x\C-x": "\e0isudo \e0"
    "\C-x\C-t": "\edditmux new -s ''\ei"
    "\C-x\C-h": "\edditail -n 25 ~/.bash_history | igrep ''\ei"
    "\C-x\C-a": "\ea!!:*\e"
    "\C-x\C-l": "\ea!!:$\e"
    "\C-x\C-s": "\ea!!:gs/"
$endif

$if python
    "\C-x\C-h": "\eddihelp()\ei"
$endif

set keymap vi-command

"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-w": backward-kill-word

$if bash
    "\C-x\C-x": "0isudo \e0"
    "\C-x\C-t": "dditmux new -s ''\ei"
    "\C-x\C-h": "dditail -n 25 ~/.bash_history | igrep ''\ei"
    "\C-x\C-a": "a!!:*\e"
    "\C-x\C-l": "a!!:$\e"
    "\C-x\C-s": "a!!:gs/"
$endif

$if python
    "\C-x\C-h": "ddihelp()\ei"
$endif
