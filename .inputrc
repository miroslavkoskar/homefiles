set bell-style none
set bind-tty-special-chars off
set colored-stats on
set completion-ignore-case on
set completion-map-case on
set completion-prefix-display-length 2
set echo-control-characters off
set editing-mode vi
set keyseq-timeout 10
set mark-symlinked-directories on
set show-all-if-unmodified on
set show-mode-in-prompt on
set skip-completed-text on
set visible-stats on

set keymap vi-insert

$include ~/.inputrc.esc

"\C-g": abort
"\C-l": clear-screen
"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-o": menu-complete
"\C-k": menu-complete-backward
"\C-w": backward-kill-word

"\e1": digit-argument
"\e2": digit-argument
"\e3": digit-argument
"\e4": digit-argument
"\e5": digit-argument
"\e6": digit-argument
"\e7": digit-argument
"\e8": digit-argument
"\e9": digit-argument
"\e-": digit-argument

"\C-x":

"\C-x\C-a": vi-movement-mode
"\C-x\C-xv": dump-variables
"\C-x\C-xf": dump-functions
"\C-x\C-xm": dump-macros

"\C-xp": "\C-x\C-aIpgx "
"\C-xP": "\C-x\C-aA | pg"

$if bash
    "\C-xx": "\C-x\C-a0isudo "
    "\C-xh": "\C-x\C-addihistory 25 | gi ''\C-x\C-ai"
    "\C-xa": "\C-x\C-aa!!:*"
    "\C-xl": "\C-x\C-aa!!:$"
    "\C-xs": "\C-x\C-aa!!:gs/"
    "\C-xc": "--color=auto "
$endif

set keymap vi-command

$include ~/.inputrc.esc

"\C-g": abort
"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-w": backward-kill-word

"\C-x":

"\C-x\C-xv": dump-variables
"\C-x\C-xf": dump-functions
"\C-x\C-xm": dump-macros

"\C-xp": "Ipgx "
"\C-xP": "A | pg"

$if bash
    "\C-xx": "Isudo "
    "\C-xh": "ddihistory 25 | gi ''\C-x\C-ai"
    "\C-xa": "a!!:*"
    "\C-xl": "a!!:$"
    "\C-xs": "a!!:gs/"
$endif
